<% provade(:title, @user.name) %>
<div>
  <H1>勤怠編集画面</H1>
  <table class="table table-border table-condensed table-hover" id="table-attendances"</table>
    <thead>
     <tr>
       <th>日付</th>
       <th>曜日</th>
       <th>出勤時間</th>
       <th>退勤時間</th>
       <th>在社時間</th>
       <th>備考</th>
     </tr> 
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td><%= $days_of_the_week[day.worked_on_wday]</td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>